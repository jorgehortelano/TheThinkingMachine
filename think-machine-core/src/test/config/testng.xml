<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite thread-count="1" verbose="1" name="ThinkingMachineCore">
	<test name="CharacterCrud" enabled="true" preserve-order="true">
		<groups>
			<run>
				<exclude name="skillFactory" />
				<exclude name="raceFactory" />
				<exclude name="damageFactory" />
				<exclude name="characteristicsFactory" />
				<exclude name="weaponsFactory" />
				<exclude name="beneficeFactory" />
				<exclude name="blessingFactory" />
				<exclude name="factionsFactory" />
				<exclude name="occultismFactory" />
				<exclude name="planetsFactory" />
				<exclude name="shieldFactory" />
				<exclude name="armourFactory" />
				<exclude name="combatStyleFactory" />
				<exclude name="randomDefinition" />
				<exclude name="randomCharacter" />
				<exclude name="jsonExporter" />
				<exclude name="blessings" />
				<exclude name="occultism" />
				<exclude name="exportTxt" />
				<include name="profile" />
				<exclude name="gaussianDistribution" />
			</run>
		</groups>
		<classes>
			<class name="com.softwaremagico.tm.factory.SkillFactoryTests" />
			<class name="com.softwaremagico.tm.factory.RaceFactoryTests" />
			<class name="com.softwaremagico.tm.factory.DamageTypeFactoryTests" />
			<class name="com.softwaremagico.tm.factory.FactionFactoryTests" />
			<class
				name="com.softwaremagico.tm.factory.CharacteristicsDefinitionFactoryTests" />
			<class name="com.softwaremagico.tm.factory.WeaponsFactoryTests" />
			<class name="com.softwaremagico.tm.factory.BeneficeFactoryTests" />
			<class name="com.softwaremagico.tm.factory.BlessingFactoryTests" />
			<class name="com.softwaremagico.tm.factory.OccultismFactoryTests" />
			<class name="com.softwaremagico.tm.factory.PlanetsFactoryTests" />
			<class name="com.softwaremagico.tm.factory.ShieldFactoryTests" />
			<class name="com.softwaremagico.tm.factory.ArmourFactoryTests" />
			<class name="com.softwaremagico.tm.factory.CombatStylesFactoryTests" />
			<class name="com.softwaremagico.tm.rules.BlessingTests" />
			<class name="com.softwaremagico.tm.rules.OccultismTests" />
			<class name="com.softwaremagico.tm.random.RandomDefinitions" />
			<class name="com.softwaremagico.tm.random.RandomCharacterTests" />
			<class name="com.softwaremagico.tm.random.GaussianDistributionTests" />
			<class name="com.softwaremagico.tm.txt.ExportTxtTests" />
